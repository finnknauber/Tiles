{
	"build": {
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist",
		"withGlobalTauri": false
	},
	"package": {
		"productName": "tiles-app",
		"version": "0.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"shell": {
				"all": false,
				"open": true,
				"sidecar": true,
				"scope": [
					{
						"name": "binaries/main",
						"sidecar": true
					}
				]
			}
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.tiles.app",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"externalBin": ["binaries/main"]
		},
		"security": {
			"csp": null
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": true,
				"title": "tiles-app",
				"width": 800,
				"height": 600
			}
		]
	}
}
